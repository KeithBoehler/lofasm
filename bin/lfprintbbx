#! /usr/bin/env python

from lofasm.bbx import bbx
def print_header(hdr):
    for k,v in hdr.items():
        print "{}: {}".format(k, v)

if __name__ == "__main__":

    import argparse
    p = argparse.ArgumentParser(description='print BBX header')
    p.add_argument('infile', help='file to read')
    args = p.parse_args()

    lfx = bbx.LofasmFile(args.infile)

    print "File: {}".format(args.infile)
    print_header(lfx.header)
    print "#"*50
